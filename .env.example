# Network mode switch: `peerjs` or `photon`.
VITE_NETWORK_MODE=peerjs

# Photon Cloud config (used when VITE_NETWORK_MODE=photon)
# VITE_PHOTON_APP_ID is optional now: if omitted, app will use built-in fallback App ID.
VITE_PHOTON_APP_ID=
VITE_PHOTON_REGION=us
VITE_PHOTON_APP_VERSION=1.0
VITE_PHOTON_PROTOCOL=wss

# Optional: set these only when you run your own peerjs-server on LAN.
# Used when VITE_NETWORK_MODE=peerjs.
VITE_PEER_HOST=192.168.1.10
VITE_PEER_PORT=9000
VITE_PEER_PATH=/
VITE_PEER_SECURE=false
